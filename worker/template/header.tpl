<style type="text/css">

    body {
        -webkit-text-size-adjust: 100% !important;
        margin: 0 !important;
        padding: 0 !important;
        font-size: 14px;
        font-family: "Microsoft YaHei", "微软雅黑" !important;
        line-height: 1;
    }
    ul{
        list-style:none;
        padding:0;
        margin:0;
    }
    ul > li{
        margin-bottom: 12px;
    }

    @media only screen and (max-device-width: 768px) {

    }

    .mail-wrapper,
    .logo {
        width: 480px;
        margin: 0 auto;
    }
    .mail-wrapper{
        /*padding-bottom: 60px;*/
    }
    .logo {
        text-align: center;
        padding: 23px 0 36px 0;
    }
    .logo a{
        display: block;
        text-indent: -9999px;
        width: 121px;
        height: 47px;
        margin: 0 auto;
        background: url("http://static.newspeed.meilishuo.com/img/mail/speed_mail_logo.png");
    }

    .title{
        padding: 0 0 8px 0;
    }
    .title p,h3{
        margin:0;
        font-size: 18px;
        font-weight: normal;
    }
    .title p{
        color:#F991B4;
        margin-bottom: 14px;
    }
    .title h3{
        color:#444;
        line-height: 1.3;
    }

    .section{
        padding:18px 0 10px 0;
    }
    .section.service{
        padding-bottom: 0;
        margin-bottom: -6px;
    }
    .section.introduce{
        padding-bottom: 0;
    }

    .section .place{
        margin-bottom: 24px;
    }
    .section .place:first-child{
        margin-top:-6px;
    }
    .section .place:last-child{
        margin-bottom: 0;
    }

    span.tt{
        color:#b2b2b2;
        margin-right: 32px;
        font-weight: 400;
    }
    span.ct{
        color:#666;
    }
    .line {
        border-bottom: 1px solid #eee;
    }

    .btn-group{
        text-align: center;
        padding:24px 0 60px 0;
    }
    .btn {
        display: inline-block;
        width: 88px;
        height: 41px;
        line-height: 41px;
        text-align:center;
        color:#707070;
        text-decoration: none;
        border: 1px solid #eee;
        border-radius: 8px;
        /*background: url("http://static.speed.meilishuo.com/img/mail/button.png") no-repeat 0 0;*/
    }
    .btn-accept{
        margin-right: 40px;
    }
    .btn-view{
        width: 48px;
        height: 26px;
        line-height: 26px;
        color:#fff;
        font-size: 14px;
        border-radius: 5px;
        background-color: #acd696;
    }
    .btn-view:hover{
        background-color: #94c77c;
    }

    .icon{
        margin:0 5px -4px 0;
        display: inline-block;
        width: 19px;
        height: 19px;
    }
    .icon-accept {
        background: url("http://static.speed.meilishuo.com/img/mail/accept.png") no-repeat 0 0;
    }
    .icon-decline {
        background: url("http://static.speed.meilishuo.com/img/mail/decline.png") no-repeat 0 0;
    }

    .footer {
        text-align: center;
    }
    .footer .tips{
        color:#7c7c7c;
    }
    .footer .go-speed{
        color:#a2a2a2;
    }
    .link-my-time {
        color: #b3d463;
        text-decoration: underline;
    }

    .important{
        color:#eb1e3f !important;
    }

