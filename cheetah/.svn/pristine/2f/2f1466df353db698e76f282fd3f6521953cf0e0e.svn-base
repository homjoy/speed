@import "../../base.less";
@import "nav.less";
.position-r{
  position: relative;
}
#page-content{
  padding: 20px 62px;
}
.search-fyc{
  width: 185px !important;
}
.th-name{width: 130px}
//当前页样式
.right-info{
  .pad-lr78{
    padding: 25px 25px 0px 78px;
    position: relative;
  }
  .pad-lr70{
    padding: 25px 25px 0px 70px;
    position: relative;
  }
}

dl{
  width: 100%;
  display: block;
  text-align: left;
  dt{
    text-align: right;
    float: left;
    width: 14%;
  }
  dd{
    padding-left: 5%;
    float: left;
    width: 86%;
    margin-bottom: 18px;
  }
}
.avatar-name,.depart-date{
  display: inline-block;
  text-align: center;
  float: left;
}
.depart-date{
  margin-bottom: 40px;
  height: 47px;
  width: 80%;
  dl{
    .bottom{
      position: relative;
    }
    dt{width:30%}
    dd{
      width: 70%;
      margin-bottom: 5px
    }
  }
}
//查看过往数据
.old-info{
  display: inline-block;
  background:url("../../../../img/queen/approval/olddata.png") no-repeat 0 2px;
  height: 25px;
  position: relative;
  padding-top: 4px;
  text-indent: 24px;
  vertical-align: top;
  &:hover{color: #ff5e93;}
}

.leave{
  position: absolute;
  background-color: #f8f5d8;
  left: 100px;
  top: -4px;
  border-radius: 5px;
  border:solid 1px #d68145;
  display: inline-block;
  padding: 2.5px 5px;
  ul{
    font-size: 12px;
    display: inline;
    li{
      display: inline-block;
      margin-right: 5px;
      color:#6a6a6a;
      span{color: #d68145;}
    }
  }

}
.timelinepl,.timeline{
  padding-left: 3px;
  &:before{
    margin-left: 3px;
  }
}


.badge-warning {
  background-color: #ebaa4b !important;
  margin-left: 5px;
  top: -2px !important;
}
.left-dt{
  max-width: 75px
}
.left-pink{
  border-left:solid 3px #ff84aa ;
}
.application_num.active{margin-bottom: 13px}
//.approval_num.active{margin-bottom: 13px}
//请假引导
.wizard-container{
  position: fixed;
}
.wizard{
  &.wizard-leave-list{
    position: absolute;
    z-index: 9999;
    top: 240px;
    right: 170px;
    width: 980px;
    height: 760px;
    background: transparent url('@{image-base}/speed/wizard/leave-yindao1.png') center 0 no-repeat;
  }
  &.wizard-leave-history{
    position: absolute;
    z-index: 9999;
    top: 267px;
    right: -33px;
    width: 1006px;
    height: 838px;
    background: transparent url('@{image-base}/speed/wizard/leave-yindao2.png') center 0 no-repeat;
  }
}
//右下footer样式
.info-foot{
  position: absolute;
  bottom: 0px;
  height: 40px;
  background-color: #f6f8fa;
  width: 100%;
  left: 0;
  line-height: 40px;
  text-align: right;
  padding-right: 20px;

}
.more{
  color: #ff84aa;
  margin-bottom: 10px !important;
  display: block;
  &:hover{color: deeppink}
}
.speed-search-head .usernameSearch-div {
  min-width: 180px ;
}
.speed-search-head {
  padding-left: 0px !important;
}
#page-content{min-width: 1035px;}
.approval-history{margin-left:5px}
.remark{margin-top:3px}
