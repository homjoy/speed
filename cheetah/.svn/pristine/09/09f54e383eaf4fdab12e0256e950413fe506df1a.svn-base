.queen-select-container {
  //

  .queen-selected-content {
    display: block;
    padding: 6px 12px;
    width: 100%;
    height: 100%;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    cursor: pointer !important;
    border-radius: 0;
    box-shadow: none;
    border: 1px solid #e9e9e9;
    transition-duration: 0.5s;

    &.no-selected {
      color: #999;
    }

    .queen-caret {
      position: absolute;
      top: 40%;
      right: 20px;
      width: 16px;
      height: 16px;
      display: inline-block;
      background-color: transparent;
      background-image: url(data:image/png;base64,);
      background-repeat: no-repeat;
      background-position: 0 0;
    }
    &.active {
      .queen-caret {
        background-position: 0 -55px;
      }
    }
  }

  .queen-selected-content {
    padding: 10px 16px;
  }

  .queen-select-dropdown {
    width: 100%;
    position: relative;
    display: none;
  }

  .dropdown-items {
    position: absolute;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 100;
    width: 100%;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.21);
    border: 1px solid #eee;
    border-top: none;
    cursor: pointer;
    margin: 0;
    max-height: 260px;
    overflow-x: hidden;
    overflow-y: scroll;

    li {
      a {
        padding: 10px 16px;
        font-size: 14px;
        background: white;
        display: block;
        &:hover {
          background-color: #eee;
        }
      }
    }

  }
}