@import "mixins/preboot.less";

.queen-upload-container {

  .queen-upload-control {
    .clearfix();

    .btn-queen-upload, .queen-upload-tips {
      float: left;
    }

    .btn-queen-upload {
      margin: 0;
      padding: 0;
      display: inline-block;
      width: 84px;
      height: 22px;
      line-height: 22px;
      text-align: center;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      background: #fff;
      border: 1px solid #dddbdd;
      font-size: 12px;
      color: #515151;
      position: relative;
      overflow: hidden;
    }
    .queen-upload-tips {
      margin: 3px 0 0 8px;
      font-size: 12px;
      color: #a0a0a0;
    }
  }

  .queen-uploaded-files {
    margin-top: 16px;

    .queen-file-item {
      margin: 0 0 8px 0;
      padding: 0;
      line-height: 16px;
      .clearfix();
    }

    .queen-filename,
    .queen-attachment,
    .queen-remove-file,
    .queen-message {
      float: left;
    }
    .queen-filename {
      margin-left: 6px;
      display: inline-block;
      width: 140px;
      max-width: 140px;
      height: 16px;
      line-height: 16px;
      font-size: 14px;
      color: #515151;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
    }
    .queen-attachment {
      display: inline-block;
      width: 16px;
      height: 16px;
      background: transparent url(data:image/png;base64,) no-repeat 0 0;
    }

    .queen-remove-file {
      i {
        display: inline-block;
        width: 16px;
        height: 16px;
        background: transparent url(data:image/png;base64,) no-repeat 0 0;
      }
    }

    .queen-message {
      margin-left: 26px;
      font-size: 12px;

      &.uploading {

      }
      &.success {
        color: #98c664;
      }
      &.error {
        color: #f26a43;
      }
    }
  }

}