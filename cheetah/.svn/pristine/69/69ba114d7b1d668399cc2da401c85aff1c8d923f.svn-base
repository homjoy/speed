input[name=sTime],
select[name=state],
input[name=eTime]{
  width:100px !important;
}
.table-container{
  overflow: scroll;
  .table{
    margin-bottom: 0;

    th,td{
      padding:5px 10px;
      white-space: nowrap;
    }
  }
}

.toolbar{

  height: 60px;
  padding:5px 0;

  .left,
  .right{
    display: inline-block;
    width:28%;
  }



  .left{
    .line{
      width: 1px;
      height: 31px;
      margin: 0 20px;
      border-left: 2px solid #000;
    }
  }
  .right{
    float:right;
    text-align: right;
  }


  .selected-condition{
    display: inline-block;
    width: 40%;
  }
}

#form-filing{
  overflow: scroll;
}

.table{
  tbody{


    .selected{

      background-color: #eee;

      .overSignDate{
        background-color: #fff;
        cursor:default;
      }

      .btn-upload-attach{
        display: block;
      }
    }

    > tr{
      cursor: pointer;

      > td{
        min-width: 100px;
        padding:5px 2px;


        .min-wd{
          min-width: 220px;
          word-break: normal;
        }
        .min-160{
          width: 160px;
          word-break: normal;
        }
        [name="signDate"]{
          width: 100px;
        }
        textarea{
          height: 100%;
        }

        .btn-upload-attach{
          display: none !important;
        }
      }
    }
  }
}

.dropzone{
  min-height: 10px;
  padding-bottom: 30px !important;

  .dz-preview{
    margin:0;
    min-height: 0;
    padding-right: 18px;


    .dz-details{
      min-height: 12px;
      padding:3px 0;
      .dz-size{
        margin-bottom: 0;
      }
    }

    .dz-remove{
      position: absolute;
      top: 1px;
      right: 1px;
      display: inline-block;
    }
  }
}

.queen-upload-container{
  min-width: 280px;
}


/*自定义合同条件查询 table样式 无边框*/
.owntable > tbody > tr,
.owntable > tbody > tr,
.owntable > tfoot > tr,
.owntable > tfoot > tr,
.owntable > thead > tr,
.owntable > thead > tr {
  border: none;
  cursor: default;
}

.owntable > tbody > tr > td,
.owntable > tbody > tr > th,
.owntable > tfoot > tr > th,
.owntable > tfoot > tr > td,
.owntable > thead > tr > th,
.owntable > thead > tr > td {
  border: none !important;
}


.owntable tr > td[colspan="6"] {
  text-align: center;
}

.query-form{
  padding-top:15px;


  .text-left{
    min-width:200px;
  }
}

#tab-pay ,
#tab-filing{
  visibility: hidden;
  min-height:300px;
}

.empty-content{
  display: none;
  background: url("../../../../img/queen/approval/kong.png") center 20% no-repeat;
  //height: 130px;
  //width: 175px;
  text-align: center;
  padding:150px 0;
  background-color:#fff;

  > p{
    color:#a0a0a0;
    margin-top:30px;
  }
}
