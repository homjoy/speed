/*付款申请单*/

.panel-body .form-horizontal .col-xs-12 > .col-xs-2{
    width: 16.10%;
}
.panel-body .form-horizontal .col-xs-12 > .col-xs-10{
    width: 82.33333333%;
}



.file-zone {
    cursor:pointer;
}


.panel{
    padding: 46px 0 0 0;

    .panel-heading{
        &:after{
            border-bottom: none;
        }
        .panel-title{
            padding: 0;
            text-align: center;
            font-size: 24px;
            line-height: 24px;
        }
    }

    .panel-body{
        .budget-occupy{
            .col-xs-3 {
                width: 24%;
                margin-right: 6px;

                &:nth-of-type(4){
                    margin-right: 0;
                }

                .input-group-addon{
                    background-color: #eeeeee;
                    color:#a0a0a0;
                }

            }
        }

        .form-horizontal legend {
            padding: 0 0 0 10px;
            line-height: 1;
            border: 0;
            font-size: 16px;
            border-left: 3px solid #fdac39;
        }

        #payDay{
            background-color: #fff;
            cursor: default;
        }
        [name=businesslineCode]{
            height: 30px;
        }
    }


    .panel-footer{
        background-color: #fff;
        border-color:#fff;
    }

}





