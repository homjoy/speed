body {
  //font-family: '微软雅黑', 'Microsoft YaHei' !important;
}
body,a,b,caption,dd,dl,div,em,form,i,label,ol,select,strong,h1,h2,h3,h4,h5,h6,table,thead,tbody,th,td,
option,button, input, optgroup, select, textarea{
  letter-spacing: 1px;//字体间距.
  font-family: "Helvetica Neue", Helvetica, Microsoft Yahei, Heiti, "黑体", Hiragino Sans GB, WenQuanYi Micro Hei, sans-serif;
}

@media (min-width:0px){
  #content-container{
    margin-top: 50px;
    z-index: 0;
  }
}

input:focus{
  border:1px solid #fff;
}
@pageMainColor : #FC6E48;
@image-base: '../../../img/family';


//头部样式
#navbar-container{
  height:50px;
  background-color: @pageMainColor;
  min-width:1000px;
}
.navbar-logo {
  height: 100%;
}
.navbar-function-content{
  line-height: 50px;

  .navbar-search{
    position: relative;
    display: inline-block;

    &:after{
      content:url('@{image-base}/navbar/search icon.png');
      position: absolute;
      right: 10px;
      top: 10px;
    }
  }

  input{
    line-height: 20px;
    min-width: 350px;
    padding: 5px 10px;
    border: none;
    border-radius: 5px;
  }

  > span{
    display: inline-block;
    line-height: 20px;
    min-width: 100px;
    padding-left: 20px;
    padding-right: 20px;
    margin-right: 20px;
    border-right: 1px solid #fff;
    font-size: 13px;
    color: #fff;
  }
  margin-right: 30px;
}
