.switch-view{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:40px;
  padding:0 30px 0 0;
  line-height: 40px;
  border-radius: 5px 5px 0 0;
  background: #f4f4f4;
  text-align: right;
  font-size: 12px;
  a i {
    color: #ff77a0;
    font-size: 16px;
    margin-right: 8px;
  }
  .eye{
    display: inline-block;
    margin:0 5px -2px 0;
    width: 21px;
    height: 12px;
    background: url("../../../img/speed/meeting/eye.png") no-repeat center 100%;
  }

  .only-service{
    margin-right:44px;
  }

  &.switched{
    background: #5d7793;

    a ,a i{
      color:#cac9c7;
    }
    .eye{
      background: url("../../../img/speed/meeting/greyeye.png") no-repeat center 100%;
    }
    .selected .eye{
      background: url("../../../img/speed/meeting/clickeye.png") no-repeat center 100%;
    }
    .selected,.selected i{
      color:#fff;
    }
  }
}