@image-base: "../../../img";
#page-content{
  padding:0;
  margin: 20px 30px;

  > .panel{
    box-shadow: none;
    border-radius: 5px;
  }
}

a{
  text-decoration: none;
  color: #535353;
  &:hover{
    color:#535353;
    text-decoration: none;
  }
}
#container {
  min-height: 1px;
  position: static;
}

table {
  margin-left: 40px;
  margin-right: 30px;
  font-size: 14px;
  text-align: left !important;
}

.table{
  width:90%;
  max-width:90%;
}

#container .table thead{
  font-size: 13px;
  color: #535353;

  th{
   border-bottom: none;
  }
}


td {
  vertical-align: middle !important;
  max-width: 250px
}

.phone {
  padding: 0 35px 35px;
  margin-top:-3px;
  .im-name,.callphonenum{min-width:120px;}
  .qr{min-width: 75px !important;text-align: center;}
  .avatarth{ min-width:52px}

  .phone-info{
    display: inline-block;
    margin-top: 30px;
    margin-bottom: 30px;
    padding-left: 30px;
    transform: translateX(-36px);

    font-size: 14px;
    border-left: 5px solid #fc6e47;
  }

  .people_num {
    color:#fc6e47;
    text-align: right;
    margin:0;
    margin-left: 50px;
    padding-bottom: 5px;
    .people{
      display: inline-block;
      width: 19px;
      height: 20px;
      margin: 0 5px -5px 0;
    }
  }

}

.min-height {
  position: relative;
  min-height: 350px;
}

.avatar, .head_img {
  height: 200px;
  width: 200px
}

.contact_head, .hover-big {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  cursor: pointer;
}

.notice_person{
  float: left;
  text-indent: 5px;
  color:#a0a0a0;
  font-size: 12px;
  a{
    color:#a0a0a0;
  }
}
#content-container {
  padding-bottom: 0;
  position: absolute;
  width: 100%;
  height: 100%;
}

.head_td, .mail_td {
  text-align: center;
}

.mail_td {
  cursor: pointer;
}

#page-content {
  min-height: 80%
}

.cuowutishi {
  height: 163px;
  width: 488px;
  margin: 0 auto;
  margin-top: 10px;
  padding: 50px;
  text-align: left;
  img {
    float: left;
    margin-left: 33px
  }
  span {
    float: left;
    font-size: 12px;
    color: #a0a0a0;
    text-align: center;
    margin-top: 30px;
    margin-left: 10px
  }
}

#footer {
  position: static;
  padding-left: 0 !important
}

.telephone {
  cursor: pointer;
  width: 120px;
  // display: inline-block;
}

.popover-content img {
  display: block;
}

.mail_contact {
  max-width: 20%;
  a {
    max-width: 250px;
    color: #fc6e47 !important;
    text-align: left;

    &:hover {
      color: orangered !important;
    }
  }
}

.popover {
  position: absolute;
}

#userlist{
  tbody{
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
}
.telephonehide{cursor: pointer}
