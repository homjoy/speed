
/*自定义合同条件查询 table样式 无边框*/
.owntable > tbody > tr,
.owntable > tbody > tr,
.owntable > tfoot > tr,
.owntable > tfoot > tr,
.owntable > thead > tr,
.owntable > thead > tr {
  border: none;
}

.owntable > tbody > tr > td,
.owntable > tbody > tr > th,
.owntable > tfoot > tr > th,
.owntable > tfoot > tr > td,
.owntable > thead > tr > th,
.owntable > thead > tr > td {
  border: none !important;
}

/*合同查询所有数据table*/
.tb-width th, .tb-width td {
  min-width: 125px;
  max-width: 200px;
  word-break: break-all;
}

.tb-width th:first-child, .tb-width td:first-child {
  min-width: 165px;
  word-break: break-all;
  box-sizing: border-box;
}



select{height: 34px !important;}


#department{
  position:relative;
}

.ztree-wrap{
  position: absolute;
  top: 41px;
  left: 8px;
  width: 92%;
  z-index: 101;
  background-color: #FFF;
  border:1px solid #e2e2e2;
  display: none;
  //height: 220px;
