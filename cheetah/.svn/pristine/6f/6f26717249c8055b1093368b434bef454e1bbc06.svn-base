
/*自定义合同条件查询 table样式 无边框*/
.owntable > tbody > tr,
.owntable > tbody > tr,
.owntable > tfoot > tr,
.owntable > tfoot > tr,
.owntable > thead > tr,
.owntable > thead > tr {
  border: none;
}

.owntable > tbody > tr > td,
.owntable > tbody > tr > th,
.owntable > tfoot > tr > th,
.owntable > tfoot > tr > td,
.owntable > thead > tr > th,
.owntable > thead > tr > td {
  border: none !important;
}


.owntable tr > td[colspan="6"] {
  text-align: center;
}



/*合同查询所有数据table*/
.tb-width th, .tb-width td {
  min-width: 125px;
  max-width: 200px;
  word-break: break-all;
}

.tb-width th:first-child, .tb-width td:first-child {
  min-width: 165px;
  word-break: break-all;
  box-sizing: border-box;
}

select{height: 34px !important;}

input[name=sTime],
select[name=state],
input[name=eTime],
input[name=minAmount],
input[name=maxAmount]{
  width:100px !important;
}

//IDC页面设置
.IDCinfo-form{
  .IDCinfoInput{
    width:94px !important;
    padding-left: 5px;
  }
  [name=areaName],
  [name=roomName] {
    width:100px !important;
  }
  .width-adjust{
    max-width:200px;
  }
  select[name=contractCompany],
  select[name=status],
  select[name=roomType]{
    width:216px !important;
  }
}



.query-form{
  padding-top:15px;


  .text-left{
    min-width:200px;
  }
}


#tb-filing-query{
  tbody > tr > td:nth-child(6){
    text-align: right;
    padding:0 15px 0 0 !important;
  }
}

.table-container{
  overflow: scroll;
  min-height: 360px;


  .table{
    margin-bottom: 0;

    th,td{
      padding:5px 10px;
      white-space: nowrap;
      position: relative;

      span.arrow{
        position: absolute;
        right: 2px;

        display: inline-block;
        width: 0;
        height: 0;
        border: 5px solid transparent;

        opacity: 0.5;

      }
      span.arrowDown{
        top: 12px;
        border-top:6px solid #a0a0a0;
      }
      span.arrowUp{
        top:8px;
        border-bottom:6px solid #a0a0a0;
      }


    }
  }
}

.empty-content{
  //display: none;
  background: url("../../../img/queen/approval/kong.png") center 20% no-repeat;
  //height: 130px;
  //width: 175px;
  text-align: center;
  padding:150px 0;
  background-color:#fff;

  > p{
    color:#a0a0a0;
    margin-top:30px;
  }
}

/* 汇总数据 */
.table-summary{
  padding: 5px 0;

  .summary-item{
    display: inline-block;
  }

  .summary-item:last-child{
    margin-left:50px;
  }

  .tt{
    margin-right:12px;
  }

}


