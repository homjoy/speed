input[name=sTime],
select[name=state],
input[name=eTime]{
  width:100px !important;
}
::-webkit-scrollbar{
  width:5px;
  height:5px;
}
::-webkit-scrollbar-thumb{
  background-color: rgba(0,0,0,0.5);
}
.table-container{
  overflow: scroll;
  .table{
    margin-bottom: 0;
  }
}

//修复我的管理页面当前tab底边非空白的问题.
.nav-tabs > li {
  margin-bottom: -2px !important;
}

.toolbar{

  height: 60px;
  padding:5px 0;

  .left,
  .right{
    display: inline-block;
    width:28%;
  }



  .left{
    .line{
      width: 1px;
      height: 31px;
      margin: 0 20px;
      border-left: 2px solid #000;
    }
  }
  .right{
    float:right;
    text-align: right;
  }


  .selected-condition{
    display: inline-block;
    width: 40%;
  }
}

#form-filing{
  overflow: scroll;
}

.table{
  tbody{


    .selected{

      background-color: #eee;

      .overSignDate{
        background-color: #fff;
        cursor:default;
      }

      .btn-upload-attach{
        display: block;
      }
    }

    > tr{
      cursor: pointer;

      > td{
        min-width: 100px;
        padding:5px 2px;


        .min-wd{
          width: 220px;
          word-break: normal;
        }
        .min-160{
          width: 160px;
          word-break: normal;
        }
        [name="signDate"]{
          width: 100px;
        }
        textarea{
          height: 100%;
        }

        .btn-upload-attach{
          display: none !important;
        }
      }
    }
  }
}

.dropzone{
  min-height: 10px;
  padding-bottom: 30px !important;

  .dz-preview{
    margin:0;
    min-height: 0;
    padding-right: 18px;


    .dz-details{
      min-height: 12px;
      padding:3px 0;
      .dz-size{
        margin-bottom: 0;
      }
    }

    .dz-remove{
      position: absolute;
      top: 1px;
      right: 1px;
      display: inline-block;
    }
  }
}

.queen-upload-container{
  min-width: 280px;
}