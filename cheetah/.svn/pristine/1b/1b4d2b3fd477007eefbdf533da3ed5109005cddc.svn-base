
<%#head2.html%>

		<div class="boxed">
			<!--CONTENT CONTAINER-->
			<!--===================================================-->
			<div id="content-container" >
				<ol class="breadcrumb">
		          <li><a href="/home">主页</a></li>
		          <li class="active">通讯录</li>
		        </ol>
				<div id="page-content">

					<div class="panel min-height" style="min-width:580px">
						<a class="floor_pic" href="/home/window/?f=address&s=map" target="_Blank"><span class="dibiao"></span><span>楼层分布图</span></a>
						<span class="title">通讯录</span>
						<div class=" select_div">
							
							<input type="text" class="input_select left" placeholder="可按：姓名/ 拼音 / 邮箱/ 手机号/ QQ号/ 搜索" value="<%if(this.q!='undefined'&&this.q){ %><%=this.q%><%}%>"/>
							<a href="javascript:void(0);" class="button_select left" style="cursor:default"><span class="button_select_word" name="name"></span>
								<!-- <ul class="choose_select hide">
									<li name="qq">QQ</li>
									<li name="qq">部门</li>
									<li name="name">姓名</li>
									<li name="mail">邮箱</li>
									<li name="mobile">手机</li>
								</ul> -->
							</a>
							<a href="javascript:void(0);" class="select_pic">
								<img src="<%= this.PICTURE_URL  %>img/search_white.png">
							</a>
						</div>

	<% if(this.contacts.code == 200 && this.contacts.data.length != 0) {%>
		<div class="phone">
			<span class="people_num"><img src="<%= this.PICTURE_URL %>img/yemianrenshu.png">当前页面人数：<%= this.contacts.data.length %>人</span>
			<table class="table table-striped table-hover" id="userlist">
		        <thead>
		          <tr>
		            <th class="text-center col-lg-1" >头像</th>
		            <th class="text-left col-lg-2" style="min-width:120px">IM/姓名</th>
		            <th class="text-left col-lg-4" >部门</th>
		            <th class="text-left col-lg-2" style="min-width:120px;">手机</th>
		            <th class="text-left hidden-sm hidden-xs col-lg-2 " >邮件</th>
		            <th class="text-left col-lg-1" style="text-align: center;">二维码</th>
		          </tr>
		        </thead>
				<tbody>
					<% this.contacts.data.forEach(function(user, index){  %>
				    	<tr>
					        <td class="head_td">
					        	<a target="_Blank1" href="<%if(user.avatar_big!=undefined){%><%= user.avatar_big %><%}else{%>javascript:void(0);<%}%>">
					        		<img class="contact_head" src="<%if(user.avatar_small!=undefined){%><%= user.avatar_small %><%}else{%><%= this.PICTURE_URL %>img/tortoise.jpg<%}%>" tabindex="0" data-avatar="<%if(user.avatar_small!=undefined){%><%= user.avatar_big %><%}else{%><%= this.PICTURE_URL %>img/tortoise.jpg<%}%>">
					        	</a>
					        </td>
					        <td ><a href="/contacts/speedim/?u=<%=user.speed_im%>" class="speedim" target="_blank"><%= user.name_cn %></a></td>
					        
					        <td ><%= user.depart_name %></td>
					        <td class="telephone" user-id="<%= user.user_id%>" tel="<%= user.mobile %>"><%= user.mobile %></td>
					        <td class="hidden-sm hidden-xs mail_contact"><a href="mailto:<%= user.mail %>@meilishuo.com"><%= user.mail %>@meilishuo.com</a></td>
					        <td class="mail_td"><a role="button" tabindex="0" class="qrcode" data-qrcode="<%= user.qrcode %>" data-qq="<%= user.qq %>"><img src="<%= this.PICTURE_URL %>img/erweima.png"></a>
					        	</td> 
				    	</tr>

				    <% }); %>
				</tbody>	
			</table>
		</div>
	<%} else {%>
		<div class="cuowutishi">
			<img src="<%= this.PICTURE_URL %>img/cuowutishi.png">
			<span>没有你要查找的人</br>老师说做人要一丝不苟，检查下有没有输入完整吧</span>
		</div>
	<%}%>




							
					</div>
				</div>

				<%#footer.html%>
			</div>
			<!--===================================================-->
			<!--END CONTENT CONTAINER-->
			<%#mainnav_container_left.html%>
			<!--%#aside.html%-->
		</div>

		<!-- SCROLL TOP BUTTON -->
		<!--===================================================-->
		<button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
		<!--===================================================-->

	</div>
<!-- END SETTINGS -->
