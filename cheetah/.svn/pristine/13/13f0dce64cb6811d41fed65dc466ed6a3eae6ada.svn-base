//placeholder居中显示
input::-webkit-input-placeholder {
  text-align: center
}


.table-adjust{
  overflow:auto;
  max-height: 500px;
}

#itemChange{
  .item-pos{
    margin-top: -13px;
    margin-left: 71px;
    margin-bottom: 39px;
  }
  .removeItem,
  .addItem {
    display: inline-block;
    height: 22px;
    line-height: 22px;
    i {
      display: inline-block;
      font-size: 16px;
      width: 26px;
      height: 22px;
      line-height: 22px;
      text-align: center;
      color: #fff;
      border-radius: 5px;
    }
  }

  .removeItem {
    i {
      background-color: #d9544f;
    }
  }
  .addItem {
    i {
      background-color: #96c662;
    }
  } 
}
