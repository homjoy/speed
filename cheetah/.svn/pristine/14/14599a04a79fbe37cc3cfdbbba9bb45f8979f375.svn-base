@import "base";

// 上传头像
.head_fix {
  margin-top: 35px;
  position: relative;
  left: 50px
}

.example {
  float: left;
  margin-left: 50px
}

.avatar_preview {
  position: relative;
  left: 450px;
}

.fl {
  float: left;
  display: inline;
}

.fr {
  float: right;
  display: inline;
}

.cf {
  zoom: 1;
}

.cf:after {
  display: block;
  visibility: hidden;
  width: 0;
  height: 0;
  line-height: 0;
  font-size: 0;
  clear: both;
  content: ".";
}

/*头像修改*/
