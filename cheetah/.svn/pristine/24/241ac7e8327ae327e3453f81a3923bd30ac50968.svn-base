select{height: 34px !important;}


#department{
  position:relative;
}

.ztree-wrap{
  position: absolute;
  top: 41px;
  left: 8px;
  width: 92%;
  z-index: 101;
  background-color: #FFF;
  border:1px solid #e2e2e2;
  display: none;
  //height: 220px;
  max-height: 300px;
  overflow-y: scroll;
}

input[name=sTime],
select[name=state],
input[name=eTime]{
  width:100px !important;
}



.query-form{
  padding-top:15px;
}


.toolbar{

  height: 60px;
  padding:5px 0;

  .left,
  .right{
    display: inline-block;
    width:28%;
  }



  .left{
    .line{
      width: 1px;
      height: 31px;
      margin: 0 20px;
      border-left: 2px solid #000;
    }
  }
  .right{
    float:right;
    text-align: right;
  }


  .selected-condition{
    display: inline-block;
    width: 40%;
  }
}

#form-filing{
  overflow: scroll;
}

#tb-filing{

  tbody{
    .selected{

      background-color: #eee;

      .overSignDate{
        background-color: #fff;
        cursor:default;
      }
    }

    > tr{
      > td{
        min-width: 100px;
        padding:5px 2px;


        .min-wd{
          width: 220px;
          word-break: normal;
        }
        .min-160{
          width: 160px;
          word-break: normal;
        }
        [name="signDate"]{
          width: 100px;
        }
        textarea{
          height: 100%;
        }

      }
    }
  }
}

.dropzone{
  min-height: 10px;
  padding-bottom: 30px !important;

  .dz-preview{
    margin:0;
    min-height: 0;
    padding-right: 18px;


    .dz-details{
      min-height: 12px;
      padding:3px 0;
      .dz-size{
        margin-bottom: 0;
      }
    }

    .dz-remove{
      position: absolute;
      top: 1px;
      right: 1px;
      display: inline-block;
    }
  }
}